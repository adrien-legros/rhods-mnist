{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "required": [
        "affinity",
        "autoscaling",
        "crunchyPostgres",
        "fullnameOverride",
        "image",
        "imagePullSecrets",
        "ingress",
        "nameOverride",
        "nodeSelector",
        "objectStorage",
        "openshiftOauth",
        "podAnnotations",
        "podSecurityContext",
        "replicaCount",
        "resources",
        "route",
        "securityContext",
        "service",
        "serviceAccount",
        "tolerations",
        "trainingTestImage"
      ],
    "properties": {
        "affinity": {
            "type": "object"
        },
        "autoscaling": {
            "type": "object",
            "required": [
                "enabled",
                "maxReplicas",
                "minReplicas",
                "targetCPUUtilizationPercentage"
            ],
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "maxReplicas": {
                    "type": "integer"
                },
                "minReplicas": {
                    "type": "integer"
                },
                "targetCPUUtilizationPercentage": {
                    "type": "integer"
                }
            }
        },
        "crunchyPostgres": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "fullnameOverride": {
            "type": "string",
            "pattern": "^[a-z0-9-_]*$"
        },
        "image": {
            "type": "object",
            "required": [
                "pullPolicy",
                "repository",
                "tag"
            ],
            "properties": {
                "pullPolicy": {
                    "type": "string",
                    "pattern": "^(Always|Never|IfNotPresent)$"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9-_.]*$"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[a-z0-9-_]*$"
                    }
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array"
                            }
                        }
                    }
                },
                "tls": {
                    "type": "array"
                }
            }
        },
        "nameOverride": {
            "type": "string",
            "pattern": "^[a-z0-9-_]*$"
        },
        "nodeSelector": {
            "type": "object"
        },
        "objectStorage": {
            "type": "object",
            "required": [
                "mlflowBucketName",
                "objectBucketClaim",
                "s3AccessKeyId",
                "s3EndpointUrl",
                "s3SecretAccessKey"
            ],
            "properties": {
                "mlflowBucketName": {
                    "type": "string"
                },
                "objectBucketClaim": {
                    "type": "object",
                    "required": [
                        "annotations",
                        "bucketclass",
                        "enabled",
                        "storageClassName"
                    ],
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "bucketclass": {
                            "type": "string",
                            "pattern": "^[a-z0-9-_]+$"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "storageClassName": {
                            "type": "string",
                            "pattern": "^[a-z0-9-_.]+$"
                        }
                    }
                },
                "s3AccessKeyId": {
                    "type": "string"
                },
                "s3EndpointUrl": {
                    "type": "string"
                },
                "s3SecretAccessKey": {
                    "type": "string"
                }
            }
        },
        "openshiftOauth": {
            "type": "object",
            "required": [
                "enabled",
                "enableBearerTokenAccess",
                "resources"
            ],
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "enableBearerTokenAccess": {
                    "type": "boolean"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "podAnnotations": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object"
        },
        "replicaCount": {
            "type": "integer"
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "route": {
            "type": "object",
            "required": [
                "annotations",
                "enabled",
                "host",
                "path",
                "tls"
            ],
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "host": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "tls": {
                    "type": "object",
                    "required": [
                        "enabled",
                        "insecureEdgeTerminationPolicy",
                        "termination"
                    ],
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "insecureEdgeTerminationPolicy": {
                            "type": "string",
                            "pattern": "^(Allow|Redirect|None)$"
                        },
                        "termination": {
                            "type": "string",
                            "pattern": "^(edge|passthrough|reencrypt)$"    
                        }
                    }
                }
            }
        },
        "securityContext": {
            "type": "object"
        },
        "service": {
            "type": "object",
            "required": [
                "port",
                "type"
            ],
            "properties": {
                "port": {
                    "type": "integer"
                },
                "type": {
                    "type": "string",
                    "pattern": "^(ClusterIP|NodePort|LoadBalancer|ExternalName)$"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "required": [
                "annotations",
                "create",
                "name"
            ],
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_]*$"
                }
            }
        },
        "tolerations": {
            "type": "array"
        },
        "trainingTestImage": {
            "type": "object",
            "required": [
                "pullPolicy",
                "repository",
                "tag"
            ],
            "properties": {
                "pullPolicy": {
                    "type": "string",
                    "pattern": "^(Always|Never|IfNotPresent)$"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9-_.]*$"
                }
            }
        }
    }
}
